    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program with Env",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "DataPath": "KData",
                "DATABASE_URL": "mongodb://localhost:27017/mydb"
            },
            "program": "${workspaceFolder}\\app.js"
        }
    ]
